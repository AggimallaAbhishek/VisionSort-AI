# AWS
AWS_REGION=eu-north-1
AWS_ACCESS_KEY_ID=your_access_key_id
AWS_SECRET_ACCESS_KEY=your_secret_access_key

# S3
S3_UPLOADS_BUCKET=visionsort-uploads-vin
S3_PROCESSED_BUCKET=visionsort-processed-vin

# PostgreSQL (AWS RDS)
DATABASE_URL=postgresql://user:password@host:5432/database

# API behavior
ALLOWED_ORIGINS=https://vision-sort-ai.vercel.app,http://localhost:5500,http://127.0.0.1:5500,http://localhost:3000,http://localhost:5173
ALLOWED_ORIGIN_REGEX=^https://.*\\.vercel\\.app$
DEFAULT_USER_ID=anonymous
BLUR_THRESHOLD=100
DUPLICATE_HASH_DISTANCE=5
MAX_IMAGE_WIDTH=1024
PREVIEW_MAX_WIDTH=640
PREVIEW_JPEG_QUALITY=70
MAX_FILE_SIZE_MB=10
MAX_FILES=50
ENABLE_AI_LABEL=true
AI_ASSISTED_STATUS=true
AI_MIN_CONFIDENCE=0.70
AI_PROMOTE_GOOD_CONFIDENCE=0.90
AI_BORDERLINE_FACTOR=0.90
DARK_PROMOTE_MIN_BRIGHTNESS=45
OVEREXPOSED_PROMOTE_MAX_BRIGHTNESS=210

# Timeout tuning (prevents long hanging uploads)
PERSIST_TASK_TIMEOUT_SECONDS=30
S3_CONNECT_TIMEOUT_SECONDS=3
S3_READ_TIMEOUT_SECONDS=12
S3_MAX_ATTEMPTS=2
DB_CONNECT_TIMEOUT_SECONDS=8
DB_STATEMENT_TIMEOUT_MS=15000
